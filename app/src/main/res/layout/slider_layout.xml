<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ln1"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@drawable/bg_top_third"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="50dp">

        <TextView
            android:id="@+id/headingtop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed-light"
            android:text="Smart India Hackathon"
            android:textAlignment="center"
            android:textColor="#FBFAFA"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/slidecurrimage"
        android:layout_width="285dp"
        android:layout_height="242dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="162dp"
        android:layout_marginEnd="62dp"
        app:srcCompat="@drawable/icon"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="60dp" />

    <TextView
        android:id="@+id/slidecurrtext"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/slidecurrimage"
        android:layout_alignTop="@+id/slidecurrimage"
        android:layout_alignEnd="@+id/slidecurrimage"
        android:layout_marginStart="6dp"
        android:layout_marginTop="286dp"

        android:layout_marginEnd="12dp"
        android:fontFamily="@font/andika"
        android:inputType="textLongMessage|textMultiLine"
        android:text="heading"
        android:textSize="19sp"
        android:textStyle="bold" />

</RelativeLayout>